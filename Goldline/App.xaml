<Application x:Class="Goldline.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:goldline="clr-namespace:Goldline"
             StartupUri="StyledViews/Security/LoginWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/BackgroundStyles.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/LabelStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/ExpanderStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <system:String x:Key="SearchTextBoxText">Enter your text here...</system:String>
            <goldline:TextBoxInputMode x:Key="DecimalInputMode">DecimalInput</goldline:TextBoxInputMode>
            <goldline:TextBoxInputMode x:Key="DigitInputMode">DigitInput</goldline:TextBoxInputMode>
            <system:String x:Key="NoteTextBoxText">Enter notes here...</system:String>
            <goldline:StockQtyToBrushConverter x:Key="StockQtyToBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>