<Window
    x:Class="Goldline.UI.Suppliers.Dialogs.AddPurchaseDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:goldline="clr-namespace:Goldline"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:persons="clr-namespace:Core.Domain.Model.Suppliers;assembly=Core"
    xmlns:products="clr-namespace:Core.Domain.Model.Inventory;assembly=Core"
    Title="Add Purchase"
    Width="1024"
    Height="450"
    MinWidth="1024"
    MinHeight="450"
    Background="{DynamicResource Goldline.Background.Window}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    FontSize="16"
    Template="{StaticResource WindowTemplate}"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Column="0"
                Margin="2"
                BorderBrush="{DynamicResource Goldline.Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        x:Name="SupplierNameLabel"
                        Grid.Column="0"
                        Content="Supplier:"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <goldline:PersonComboBox
                        x:Name="SupplierComboBox"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        ColumnHeader1="Name"
                        ColumnHeader2="Contact"
                        ItemsSource="{Binding SupplierSource}"
                        SelectionChanged="SupplierComboBox_SelectionChanged"
                        Watermark="Select Supplier..." />
                    <Label
                        x:Name="NoteLabel"
                        Grid.Row="1"
                        Content="Contact Info:"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <TextBox
                        x:Name="ContactInfoTextBox"
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{DynamicResource Goldline.TextBoxStyle.Dark}"
                        Text="{Binding SelectedItem.(persons:Supplier.Contact), ElementName=SupplierComboBox}" />
                    <Label
                        x:Name="TotalAmountLabel"
                        Grid.Row="2"
                        Content="Amount:"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <TextBox
                        x:Name="TotalAmountTextBox"
                        Grid.Row="2"
                        Grid.Column="1"
                        IsEnabled="False"
                        Style="{DynamicResource Goldline.TextBoxStyle.Dark}"
                        Text="{Binding Purchase.Amount}" />
                    <Label
                        x:Name="ContactInfoLabel"
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Note:"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <TextBox
                        x:Name="NoteTextBox"
                        Grid.Row="3"
                        Grid.Column="1"
                        IsEnabled="True"
                        Style="{DynamicResource Goldline.TextBoxStyle.Dark}" />
                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                Margin="2"
                BorderBrush="{DynamicResource Goldline.Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Column="0"
                        Content="Add Items"
                        FontSize="20"
                        FontWeight="Bold"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <Label
                        x:Name="ItemLabel"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Item:"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <goldline:ProductComboBox
                        x:Name="SearchProductComboBox"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        ColumnHeader1="Name"
                        ColumnHeader2="Unit Price"
                        ColumnHeader3="Stocks"
                        ItemsSource="{Binding ItemSource}"
                        ScrollViewer.CanContentScroll="True"
                        Watermark="Select Item..." />
                    <Label
                        x:Name="QuantityLabel"
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Quantity:"
                        Style="{DynamicResource Goldline.LabelStyle.Dark}" />
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="QuantityTextBox"
                            Margin="5"
                            Style="{DynamicResource Goldline.TextBoxStyle.Dark}">
                            <i:Interaction.Behaviors>
                                <goldline:TextBoxInputBehavior InputMode="{StaticResource DigitInputMode}" />
                            </i:Interaction.Behaviors>
                        </TextBox>
                        <Button
                            x:Name="ButtonAddItem"
                            Grid.Column="1"
                            Margin="5"
                            Click="ButtonAddItem_Click"
                            Content="+"
                            Style="{DynamicResource Goldline.ButtonStyle.Dark}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Margin="2"
                Background="{DynamicResource Goldline.Background.HeaderBar}"
                BorderBrush="{DynamicResource Goldline.Border}"
                BorderThickness="1"
                CornerRadius="10">
                <DataGrid
                    x:Name="PurchaseEntriesDataGrid"
                    Margin="5"
                    AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                    AutoGenerateColumns="False"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    HorizontalScrollBarVisibility="Disabled"
                    IsReadOnly="True"
                    IsTextSearchEnabled="True"
                    ItemsSource="{Binding Purchase.OrderEntries}"
                    Opacity="0.8"
                    ScrollViewer.CanContentScroll="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="0.7*"
                            Binding="{Binding ItemName}"
                            Header="Name" />
                        <DataGridTextColumn
                            Width="0.3*"
                            Binding="{Binding Qty}"
                            Header="Quantity" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="ExpressCheckoutButton"
                    Margin="2"
                    Click="ExpressCheckoutButton_OnClick"
                    Content="Express Checkout"
                    Style="{DynamicResource Goldline.ButtonStyle.Dark}" />
                <Button
                    x:Name="CheckoutButton"
                    Grid.Column="1"
                    Margin="2"
                    Click="CheckoutButton_Click"
                    Content="Checkout"
                    Style="{DynamicResource Goldline.ButtonStyle.Dark}" />
            </Grid>

        </Grid>
    </Grid>
</Window>